
<div id="conversation">
	<% game = Game.find(params[:id]) %>
	<% game.messages.each do |message| %>
		<div class="message"><%= message.user.username %>: <%= message.content %></div><br>
	<% end %>
</div>
<form action="/game/<%= game.id%>/chat" method="post" id="new_message">
	<input type="text" name="message[content]" placeholder="Your trash talk goes here...">
	<input type="submit">
</form>
